# spawn terminal terminal
alt + Return
	st
# spawn firefox
alt + w
	firefox
# dmenu
alt + r
	dmenu_run -fn "JetBrainsMono:size=14"

# window based shortucts (with /bin/sh to work for all systems)
# network manager
alt + shift + w
	st /bin/sh -c -e nmtui
# htop
alt + shift + r
	st /bin/sh -c -e htop

# function keys
XF86MonBrightnessDown
	xbacklight -dec 10
XF86MonBrightnessUp
	xbacklight -inc 10
XF86TouchpadToggle
	(synclient | grep 'TouchpadOff.*1' && synclient TouchpadOff=0) || synclient TouchpadOff=1
XF86PowerOff
	sysact
XF86AudioMute
	pamixer -t
XF86AudioLowerVolume
	pamixer --allow-boost -d 3
XF86AudioRaiseVolume
	pamixer --allow-boost -i 3
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle
